<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Producto</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Imagen</th>
                    </tr>
                </thead>
                {{#if prodExists}}
                <tbody>
                    {{#each productos}}
                    <tr>
                        <td>{{this.title}}</td>
                        <td>{{this.price}}</td>
                        <td>
                            <img src="{{this.thumbnail}}" class="img-fluid" alt="img">
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
                {{/if}}
            </table>
        </div>
        <div class="col-4 offset-4">
            <form action="/" method="get">
                <button type="submit" class="btn btn-danger">Inicio</button>
            </form>
        </div>
    </div>
</div>